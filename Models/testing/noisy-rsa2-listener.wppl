var getModel = function(modelName) {
  var models = {
    'L0': L0,
    'S1': S1,
    'L1': L1,
    'S2': S2,
    'L2': L2
  }
  return models[modelName]
}
var modelName = getModelName(rData)
var model = getModel(modelName)
model('X')